<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.think.android.samples">
    
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true">
        
        <activity
            android:name=".ThinkSamples"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/circleimageview"
            android:name=".widget.CircleImageViewDemo"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="think.android.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/circlerotaprogressbar"
            android:name=".widget.CircleRotaProgressBarDemo"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="think.android.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/tabselectorlayout"
            android:name=".widget.TabSelectorLayoutDemo"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="think.android.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/gradualframedrawable"
            android:name=".graphics.GradualFrameDrawableDemo"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="think.android.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>

        <activity
            android:label="@string/layerdrawable"
            android:name=".graphics.LayerDrawableDemo"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="think.android.category.SAMPLE_CODE"/>
            </intent-filter>
        </activity>
    
    </application>

</manifest>
